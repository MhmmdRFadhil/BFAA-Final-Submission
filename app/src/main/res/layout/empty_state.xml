<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgSearch"
        style="@style/EmptyStateImage"
        android:contentDescription="@string/image_search_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/tvTitleSearch"
        style="@style/TextTitleEmpty"
        android:layout_marginTop="32dp"
        android:text="@string/title_search"
        app:layout_constraintEnd_toEndOf="@+id/imgSearch"
        app:layout_constraintStart_toStartOf="@+id/imgSearch"
        app:layout_constraintTop_toBottomOf="@+id/imgSearch" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/open_sans_regular"
        android:gravity="center"
        android:text="@string/subtitle_search"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleSearch" />

</androidx.constraintlayout.widget.ConstraintLayout>